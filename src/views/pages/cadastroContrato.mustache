{{>partials/header}}
    
<!-- Side bar começa aqui -->
{{>partials/sidebar}}

<script> document.title = "Cadastro de Contratos" </script>

<!-- Conteúdo da página começa aqui -->
<div class="col-10">
  <div class="container">
        <div class="row">
            <div class="sidebar-heading mt-3 mb-4 py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">
                Cadastro de Contratos
            </div>
            <form class="formularioCadastro row g-3" method="POST" action="/contrato/adicionar">
                <div class="col-md-6">
                    <label for="inputAssociado" class="form-label">Associado</label>
                    <select id="inputAssociado" class="form-select" name="cod_associado">
                        <option>Selecione...</option>
                        {{#associados}}
                            <option value="{{COD_ASSOCIADO}}">{{NOME}}</option>
                        {{/associados}}
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="inputCliente" class="form-label">Cliente</label>
                    <select id="inputCliente" class="form-select" name="cod_cliente">
                        <option>Selecione...</option>
                        {{#clientes}}
                            <option value="{{COD_CLIENTE}}">{{NOME}}</option>
                        {{/clientes}}
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="inputDataEmissao" class="form-label">Data Emissão</label>
                    <input type="date" class="form-control" id="inputDataEmissao" name="data_emissao">
                </div>
                <div class="col-md-3">
                    <label for="inputDataEntrega" class="form-label">Data Entrega</label>
                    <input type="date" class="form-control" id="inputDataEntrega" name="data_entrega">
                </div>
                <div class="col-md-3">
                    <label for="inputValor" class="form-label">Valor</label>
                    <input type="number" class="form-control" id="inputValor" name="valor">
                </div>
                <div class="col-md-3">
                    <label for="inputDesconto" class="form-label">Desconto</label>
                    <input type="number" class="form-control" id="inputDesconto" name="desconto">
                </div>
                <div class="col-md-12">
                    <label for="inputDetalhes" class="form-label">Detalhes/Descrição Contrato</label>
                    <input type="text" class="form-control" id="inputDetalhes" name="item_contrato">
                </div>
                <div class="col-12">
                    <input type="submit" class="btn btn-primary" value="Cadastrar" />
                </div>
            </form>
        </div>  
    </div>
</div>

<!-- Conteúdo da página termina aqui -->
<{{>partials/footer}}    