{{>partials/header}}
    
<!-- Side bar começa aqui -->
{{>partials/sidebar}}

<script> document.title = "Lista de Clientes" </script>

<!-- Conteúdo da página começa aqui -->
<div class="col-10">
    <div class="container">
        <div class="col ">
            <div class="sidebar-heading mt-3 mb-4 py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">
                Lista de Clientes
            </div>
            <a href="/cliente/adicionar" class="button-produto btn btn-primary">Adicionar novo</a>
            <table class="table table-hover text-center">
                <thead>
                    
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Razão Social</th>
                        <th scope="col">CPF/CNPJ</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#clientes}}
                        <tr>
                            <th scope="row">{{COD_CLIENTE}}</th>
                            <td>{{NOME}}</td>
                            <td>{{RAZAO_SOCIAL}}</td>
                            <td>{{CPF_CNPJ}}</td>
                            <td>
                                <div class="d-inline">
                                    <a href="/cliente/alterar/{{COD_CLIENTE}}" class="button-produto btn btn-primary">Editar</a>
                                    <a href="/cliente/deletar/{{COD_CLIENTE}}" class="button-produto btn btn-danger">Excluir</a>
                                </div>
                            </td>
                        </tr>
                    {{/clientes}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{>partials/footer}}